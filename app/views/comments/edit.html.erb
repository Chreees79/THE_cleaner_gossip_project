<div class="d-flex align-items-center flex-column">
  <h1>Modifiez votre commentaire ici :</h1>

  <%= form_for([@gossip, @comment])  do |f| %>

    <div class="form-group", style="width: 500px">
      <label>Contenu du commentaire</label>
      <%= f.text_area :content, value: "#{@comment.content}", class:"form-control"%>
    </div>

    <div class="form-group">
      <button type="submit", class= "btn btn-warning mb-5 mt-5" >Modifier commentaire</button>
    </div>

    <div>
        <%= link_to "Supprimer", gossip_comment_path(@comment.id), class: "btn btn-danger d-inline-flex justify-content-center p-3", :data => {:confirm => 'Are you sure?', :method => "DELETE"} %>
    </div>

  <% end %>

</div>
