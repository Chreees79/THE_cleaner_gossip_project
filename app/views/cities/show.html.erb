<div>
<h2 class="text-center">🏬 <%= @city.name %></h2>
<p class="text-center font-italic">Code Postal: <%= @city.zip_code %></p>
</div>


<div class="row row-cols-1 row-cols-md-4 g-4 px-4">
  <% @gossips.each do |gossip| %>
    <div class="col p-5 d-flex justify-content-center">
      <div class="card" style="width: 40rem; box-shadow: rgba(0, 0, 0, 0.1) -4px 9px 25px -6px; background-color: #f8f8f3">
        <img src="https://i.imgur.com/U4bK2H1.png" class="card-img-top opac_img" alt="message_bottle">
        <div class="card-body d-flex flex-column justify-content-between">
          <h5 class="card-title"><%= gossip.title %></h5>
          <p class="card-text">Auteur(e) : <%= gossip.user.first_name%></p>
          <p class="card-text">Coms : <%= gossip.comments.length%></p>
          <%= link_to "Afficher le potin", gossip_path(gossip.id), class: "btn btn-secondary d-flex justify-content-center align-items-end"%>
          <% if already_exist?(gossip)%>
          <div class="p-2">
          <button  type="button" class="btn btn-outline-light position-relative btn-sm"> <%= link_to "♥", gossip_like_path(gossip.id, :id), method: :delete, class:"likes" %> 
          <span class="position-absolute top-50 start-100 translate-middle badge rounded-pill bg-secondary"><%= gossip.likes.length%><span class="visually-hidden">nombre de likes</span></span>
          </button>
          </div>
          <% else %>
          <div class="p-2">
          <button  type="button" class="btn btn-outline-light position-relative btn-sm"><%= link_to "♡", gossip_likes_path(gossip.id), method: :post, class:"likes" %><span class="position-absolute top-50 start-100 translate-middle badge rounded-pill bg-secondary"><%= gossip.likes.length%><span class="visually-hidden">unread messages</span></span>
          </button>
          </div> 
          <% end %> 
          
        </div>        
      </div>
    </div>
  <% end %>
</div>